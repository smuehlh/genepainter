<div id='graphical'>
  <%= render_standard %>
</div>

<h4>View Options</h4>
<table>
  <tr>
    <td>
      <%=
        content_tag(:div,
          check_box_tag('standard') +
          content_tag(:span, 'Standard', :style => 'padding-left: 5px; padding-right: 20px')
          )
      %>

      <%= javascript_tag defer: 'defer' do -%>
        $('input#standard').change(function() {
          var checkedOrNot = $(this).is(':checked');

          if (checkedOrNot) {
            $('div#graphical').html('')
            $('div#graphical').append('<%= render_standard %>');

            $('input#focus_on_common_introns').prop('disabled', true);
          } else {
            $('input#focus_on_common_introns').removeAttr('disabled');
          }
        });
      <% end -%>

      <%=
        content_tag(:div,
          check_box_tag('focus_on_common_introns') +
          content_tag(:span, 'Focus on common introns', :style => 'padding-left: 5px; padding-right: 20px')
        )
      %>

      <%= javascript_tag defer: 'defer' do -%>
        $('input#focus_on_common_introns').change(function() {
          var checkedOrNot = $(this).is(':checked');

          if (checkedOrNot) {
            $('div#graphical').html('')
            $('div#graphical').append('<%= render_reduced %>');

            $('input#standard').prop('disabled', true);
          } else {
            $('input#standard').removeAttr('disabled');
          }
        });

      <% end -%>
    </td>
    <td style='padding-left: 30px;'>

    </td>
  <tr>
</table>

<%= javascript_tag defer: 'defer' do -%>
  $('input#standard').prop('checked', true);
  $('input#focus_on_common_introns').prop('disabled', true);
<% end -%>
