<% if @fatal_error.blank? then %>
  hide_show_waiting('hide');

  // update uploaded filename
  $('#uploaded_species_mapping').html('<%= @basename %>');

  update_data_center_table('<%= controller.name_species_map.to_json %>');

  // enable create missing gene structure option
  $.each($('input#generateGeneStructure'), function() {
    if ( $(this).parent().next().text().length ) {
      $(this).removeAttr('disabled');
    }
  });

<% else%>
  hide_show_waiting('hide');
  error('Cannot upload species mapping file.');

  // toggle help
  $("div#upload_species_mapping_help").show("slow");
<% end %>
