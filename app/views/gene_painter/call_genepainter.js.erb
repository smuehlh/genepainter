<% if @fatal_error.blank? then %>
	<% if ! @warning.blank? then %>
		warning('<%=raw(@warning)%>');
	<% end %>

	$("#t_aligned_gene_structures").removeClass("default-text");
	$("#t_aligned_gene_structures").show();
	<% new_content = escape_javascript(render(partial: "gene_painter/results/aligned_gene_structures"))%>
	$("#t_aligned_gene_structures").html("<%= new_content %>");

	$("#t_phylotree").removeClass("default-text");
	$("#t_phylotree").show();
	<% new_content = escape_javascript(render(partial: "gene_painter/results/phylotree"))%>
	$("#t_phylotree").html("<%= new_content %>");

	$("#t_download").removeClass("default-text");
	$("#t_download").show();
	<% new_content = escape_javascript(render(partial: "gene_painter/results/download"))%>
	$("#t_download").html("<%= new_content %>");
	// hide waiting screen after page is loaded!
	hide_show_waiting('hide');
<% else %>
	// hide waiting screen before error is rendered!
	hide_show_waiting('hide');
	error('<%=raw(@fatal_error)%>');
<% end %>
