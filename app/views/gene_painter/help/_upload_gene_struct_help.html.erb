<%=
content_tag(:div, 
	content_tag(:span, "", 
		:class => "ui-icon ui-icon-closethick warning_close", 
		:style => "display:inline-block;",
		:onclick => "$('#upload_gene_struct_help').hide('slow');"
	) +		
	content_tag(:normal, 
